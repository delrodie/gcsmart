{% extends 'admin.html.twig' %}

{% block title %}Modification des agents{% endblock %}

{% block body %}

    <div class="content">
      <div class="">
        <div class="page-header-title">
          <h4 class="page-title">Modification des agents</h4>
        </div>
      </div>

      <div class="page-content-wrapper">
        <div class="container">
          <div class="row">
            <div class="col-sm-12">
              <div class="panel panel-primary">
                <div class="panel-body">
                  <!-- Bouton -->
                  <div class="row bouton">
                    <div class="col-sm-4 col-sm-offset-8 text-right">
                      <a href="{{ path('admin_agent_index')}}">
                        <button type="button" class="btn btn-primary">Retour à la liste des agents</button>
                      </a>
                    </div>
                  </div>
                  <!-- \Bouton -->
                  <!-- Message -->
                  {% for flash_message in app.session.flashBag.get('notice') %}
                    {% if flash_message %}
                    <div class="row">
                      <div class="col-xs-8 col-xs-offset-2 col-sm-8 col-sm-offset-2">
                        <div class="alert alert-success alert-dismissible fade in">
                          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                          <a href="#" class="alert-link">NOTIFICATION :</a> {{ flash_message }}
                        </div>
                      </div>
                    </div>
                    {% endif %}
                  {% endfor %}
                  <!-- \Message -->

                </div>
              </div>
            </div>
          </div>
          <!-- Panel -->
          <div class="row">
            <div class="col-sm-5 col-sm-offset-3">
              <div class="panel">
                <div class="panel-body user-card">
                  <div class="media-main">
                    <a href="#" class="pull-left">
                      <img class="thumb-lg img-circle" src="{{ asset('ressources/uploads/agents/' ~ agent.avatar.id ~ '.' ~ agent.avatar.url )}}" alt="">
                    </a>
                    <div class="info">
                      <h4>{{ agent.nom }} {{ agent.prenoms}}</h4>
                      <p class="text-muted">{{ agent.matricule }}</p>
                    </div>
                  </div>
                  <div class="clearfix"></div>
                  <p class="text-muted info-text">
                    <table>
                      <tbody>
                        <tr>
                          <th>N° CNI &nbsp;</th>
                          <td>&nbsp; : &nbsp;</td>
                          <td>&nbsp; {{ agent.cni }}</td>
                        </tr>
                        <tr>
                          <th>Service &nbsp;</th>
                          <td>&nbsp; : &nbsp;</td>
                          <td>&nbsp; {{ agent.service }}</td>
                        </tr>
                        <tr>
                          <th>Fonction &nbsp;</th>
                          <td>&nbsp; : &nbsp;</td>
                          <td>&nbsp; {{ agent.fonction }}</td>
                        </tr>
                        <tr>
                          <th>L. travail &nbsp;</th>
                          <td>&nbsp; : &nbsp;</td>
                          <td>&nbsp; {{ agent.lieufonc }}</td>
                        </tr>
                        <tr>
                          <th>Grade &nbsp;</th>
                          <td>&nbsp; : &nbsp;</td>
                          <td>&nbsp; {{ agent.grade }}</td>
                        </tr>
                        <tr>
                          <th>Classe &nbsp;</th>
                          <td>&nbsp; : &nbsp;</td>
                          <td>&nbsp; {{ agent.classe }}</td>
                        </tr>
                        <tr>
                          <th>Echelon &nbsp;</th>
                          <td>&nbsp; : &nbsp;</td>
                          <td>&nbsp; {{ agent.echelon }}</td>
                        </tr>
                        <tr>
                          <th>Contact &nbsp;</th>
                          <td>&nbsp; : &nbsp;</td>
                          <td>&nbsp; {{ agent.contact }}</td>
                        </tr>
                        <tr>
                          <th>Email &nbsp;</th>
                          <td>&nbsp; : &nbsp;</td>
                          <td>&nbsp; {{ agent.email }}</td>
                        </tr>
                      </tbody>
                    </table>
                  </p>
                  <hr>
                  <div class="row">
                    <div class="col-xs-6">
                      <a href="{{ path('admin_agent_edit', { 'slug': agent.slug }) }}"><button type="button" class="btn btn-primary btn-block waves-effect">Modifier</button></a>
                    </div>
                    <div class="col-xs-6">
                      <a href="{{ path('admin_agent_new')}}"><button type="button" class="btn btn-primary btn-block waves-effect">Ajouter un nouvel agent</button></a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <!-- \Panel -->
        </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <!-- Plugins js -->
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/timepicker/bootstrap-timepicker.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js')}}" type="text/javascript"></script>

        <!-- Plugins Init js -->
        <script src="{{ asset('ressources/vendor/admin/assets/pages/form-advanced.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-sweetalert/sweet-alert.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/pages/sweet-alert.init.js')}}"></script>

        <script type="text/javascript" src="{{ asset('assets/plugins/parsleyjs/parsley.min.js')}}"></script>

        <script type="text/javascript">
            $(document).ready(function() {
                $('form').parsley();
            });
        </script>
        <script src="{{ asset('ressources/vendor/admin/assets/photo/js/bootstrap-fileinput.js') }}" type="text/javascript"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-filestyle/js/bootstrap-filestyle.min.js') }}" type="text/javascript"></script>

        <script src="{{ asset('ressources/vendor/admin/assets/js/app.js')}}"></script>
{% endblock %}
