{% extends 'admin.html.twig' %}

{% block title %}Modification des agents{% endblock %}

{% block stylesheets %}
<!--Morris Chart CSS -->
  <link rel="stylesheet" href="{{ asset('ressources/vendor/admin/assets/plugins/chartist/css/chartist.min.css')}}">
  <link href="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-sweetalert/sweet-alert.css')}}" rel="stylesheet" type="text/css">

  <link href="{{ asset('ressources/vendor/admin/assets/plugins/timepicker/bootstrap-timepicker.min.css')}}" rel="stylesheet">
  <link href="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css')}}" rel="stylesheet">
  <link href="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css')}}" rel="stylesheet">
  <link href="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-touchspin/css/jquery.bootstrap-touchspin.min.css')}}" rel="stylesheet" />
  <link href="{{ asset('ressources/vendor/admin/assets/photo/css/bootstrap-fileinput.css') }}" rel="stylesheet" type="text/css" />

  {{ parent() }}
{% endblock %}

{% block body %}

    <div class="content">
      <div class="">
        <div class="page-header-title">
          <h4 class="page-title">Modification des agents</h4>
        </div>
      </div>

      <div class="page-content-wrapper">
        <div class="container">
          <div class="row">
            <div class="col-sm-12">
              <div class="panel panel-primary">
                <div class="panel-body">
                  <!-- Bouton -->
                  <div class="row bouton">
                    <div class="col-sm-4 col-sm-offset-8 text-right">
                      <a href="{{ path('admin_agent_index')}}">
                        <button type="button" class="btn btn-primary">Retour à la liste des agents</button>
                      </a>
                    </div>
                  </div>
                  <!-- \Bouton -->
                  {{ form_start(edit_form, {'attr': {'class': 'form-horizontal'}}) }}

                  <div class="row">
                    <div class="col-sm-4 col-sm-offset-1">
                      <div class="form-group">
                        <label class="control-label">Matricule
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.matricule) }}
                        {{ form_errors(edit_form.matricule) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">N° CNI
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.cni) }}
                        {{ form_errors(edit_form.cni) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">Nom
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.nom) }}
                        {{ form_errors(edit_form.nom) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">Prenoms
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.prenoms) }}
                        {{ form_errors(edit_form.prenoms) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">Date de naissance
                          <span class="required"> * </span>
                        </label>
                        <div class="input-group">
                          {{ form_widget(edit_form.datenaiss) }}
                          <span class="input-group-addon bg-custom b-0"><i class="mdi mdi-calendar"></i></span>
                          {{ form_errors(edit_form.datenaiss) }}
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label">Lieu de naissance
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.lieunaiss) }}
                        {{ form_errors(edit_form.lieunaiss) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">Sexe
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.sexe) }}
                        {{ form_errors(edit_form.sexe) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">Email
                          <span class="required">  </span>
                        </label>
                        {{ form_widget(edit_form.email) }}
                        {{ form_errors(edit_form.email) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">Contact
                          <span class="required">  </span>
                        </label>
                        {{ form_widget(edit_form.contact) }}
                        {{ form_errors(edit_form.contact) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">Fonction
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.fonction) }}
                        {{ form_errors(edit_form.fonction) }}
                      </div>
                    </div>
                    <div class="col-sm-4 col-sm-offset-1">
                      <div class="fileinput fileinput-new" data-provides="fileinput">
                        <div class="fileinput-preview thumbnail" data-trigger="fileinput" style="width: 300px; height: 200px;"> </div>
                        <div>
                          <span class="btn red btn-outline btn-file">
                            <span class="fileinput-new"> {{ form_widget(edit_form.avatar) }} </span>
                            <span class="fileinput-exists"> Changer </span>
                                      <!--<input type="file" name="..."> -->
                          </span>
                          <a href="javascript:;" class="btn btn-alert fileinput-exists" data-dismiss="fileinput"> Supprimer </a>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label">Service
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.service) }}
                        {{ form_errors(edit_form.service) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">Date de prise de service
                          <span class="required"> * </span>
                        </label>
                        <div class="input-group">
                          {{ form_widget(edit_form.datefonc) }}
                          <span class="input-group-addon bg-custom b-0"><i class="mdi mdi-calendar"></i></span>
                          {{ form_errors(edit_form.datefonc) }}
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label">Lieu de travail
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.lieufonc) }}
                        {{ form_errors(edit_form.lieufonc) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">Grade
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.grade) }}
                        {{ form_errors(edit_form.grade) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">agent
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.classe) }}
                        {{ form_errors(edit_form.classe) }}
                      </div>
                      <div class="form-group">
                        <label class="control-label">Echelon
                          <span class="required"> * </span>
                        </label>
                        {{ form_widget(edit_form.echelon) }}
                        {{ form_errors(edit_form.echelon) }}
                      </div>
                      <div class="form-group">
                        <div class="checkbox checkbox-primary">
                          {{ form_widget(edit_form.statut) }}
                          {{ form_errors(edit_form.statut) }}
                            <label class="control-label"> Activez/desactivez cet agent
                              <span class="required"> </span>
                            </label>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-sm-5 col-sm-offset-6">
                      <div class="form-group m-b-0">
                        <div class="text-right bouton-ajout">
                          <button type="submit" class="btn btn-primary waves-effect waves-light">
                            Modification le nouvel agent
                          </button>
                          <button type="reset" class="btn btn-default waves-effect m-l-5">
                            Annuler
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                  </div>
                  {{ form_end(edit_form) }}
                </div>
              </div>
            </div>
          </div>
        </div>

{% endblock %}

{% block javascripts %}
  {{ parent() }}

  <!-- Plugins js -->
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/timepicker/bootstrap-timepicker.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js')}}" type="text/javascript"></script>

        <!-- Plugins Init js -->
        <script src="{{ asset('ressources/vendor/admin/assets/pages/form-advanced.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-sweetalert/sweet-alert.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/pages/sweet-alert.init.js')}}"></script>

        <script type="text/javascript" src="{{ asset('assets/plugins/parsleyjs/parsley.min.js')}}"></script>

        <script type="text/javascript">
            $(document).ready(function() {
                $('form').parsley();
            });
        </script>
        <script src="{{ asset('ressources/vendor/admin/assets/photo/js/bootstrap-fileinput.js') }}" type="text/javascript"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-filestyle/js/bootstrap-filestyle.min.js') }}" type="text/javascript"></script>

        <script src="{{ asset('ressources/vendor/admin/assets/js/app.js')}}"></script>
{% endblock %}
