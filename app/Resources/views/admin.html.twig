<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
        <meta content="GC SMART" name="description" />
        <meta content="Eden'Art, Delrodie AMOIKON" name="author" />
        <title>{% block title %}GC Smart - Administrateur{% endblock %}</title>

        {% block stylesheets %}
        <link href="{{ asset('ressources/vendor/admin/assets/css/bootstrap.min.css')}}" rel="stylesheet" type="text/css">
        <link href="{{ asset('ressources/vendor/admin/assets/css/icons.css')}}" rel="stylesheet" type="text/css">
        <link href="{{ asset('ressources/vendor/admin/assets/css/style.css')}}" rel="stylesheet" type="text/css">
        <link rel="stylesheet" type="text/css" href="{{ asset('ressources/css/gcsmart.css')}}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('ressources/images/amoiries.png') }}" />
    </head>
    <body class="fixed-left">
      <!-- Begin page -->
        <div id="wrapper">

            <!-- Top Bar Start -->
            <div class="topbar">
                <!-- LOGO -->
                <div class="topbar-left">
                    <div class="text-center">
                        <a href="#" class="logo"><img src="{{ asset('ressources/images/logo.png')}}" height="20" alt="logo"></a>
                        <a href="#" class="logo-sm"><img src="{{ asset('ressources/images/logo_sm.png')}}" height="30" alt="logo"></a>
                    </div>
                </div>
                <!-- Button mobile view to collapse sidebar menu -->
                <div class="navbar navbar-default" role="navigation">
                    <div class="container">
                        <div class="">
                            <div class="pull-left">
                                <button type="button" class="button-menu-mobile open-left waves-effect waves-light">
                                    <i class="ion-navicon"></i>
                                </button>
                                <span class="clearfix"></span>
                            </div>

                            <ul class="nav navbar-nav navbar-right pull-right">
                                <li class="hidden-xs">
                                    <a href="#" id="btn-fullscreen" class="waves-effect waves-light notification-icon-box"><i class="ion-qr-scanner"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle profile waves-effect waves-light" data-toggle="dropdown" aria-expanded="true">
                                        <img src="{{ asset('ressources/images/avatar.png')}}" alt="user-img" class="img-circle">
                                        <span class="profile-username">
                                            {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                                              {{ 'layout.user'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                                            {% endif %}
                                            <span class="caret"></span>
                                        </span>
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="{{ path('fos_user_change_password')}}">Changer le mot de passe </a></li>
                                        <li class="divider"></li>
                                        <li><a href="{{ path('fos_user_security_logout')}}"> Deconnexion</a></li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                        <!--/.nav-collapse -->
                    </div>
                </div>
            </div>
            <!-- Top Bar End -->


            <!-- ========== Left Sidebar Start ========== -->

            <div class="left side-menu">
                <div class="sidebar-inner slimscrollleft">

                    <form class="sidebar-search">
                        <div class="">
                            <input type="text" class="form-control search-bar" placeholder="Recherche...">
                        </div>
                        <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                    </form>
                    <!--- Divider -->


                    <div id="sidebar-menu">
                        <ul>
                            <li>
                                <a href="index-2.html" class="waves-effect"><i class="ion-ios7-analytics"></i><span> Tableau de bord </span></a>
                            </li>

                            <li class="has_sub">
                                <a href="javascript:void(0);" class="waves-effect"><i class="fa fa-users"></i><span> Agents </span><span class="pull-right"><i class="mdi mdi-chevron-right"></i></span><span class="badge badge-primary pull-right">2750</span></span></a>
                                <ul class="list-unstyled">
                                    <li><a href="agents-listes.html">Liste et ajout</a></li>
                                    <li><a href="agents-listes.html">Badges</a></li>
                                </ul>
                            </li>

                            <li>
                                <a href="{{ path('admin_classe_index')}}" class="waves-effect"><i class="fa fa-clone"></i><span> Classes </span></a>
                            </li>

                            <li>
                                <a href="{{ path('admin_echelon_index')}}" class="waves-effect"><i class="fa fa-line-chart"></i><span> Echelons </span></a>
                            </li>

                            <li>
                                <a href="{{ path('admin_grade_index')}}" class="waves-effect"><i class="fa fa-graduation-cap"></i><span> Grades </span></a>
                            </li>

                            <li>
                                <a href="{{ path('admin_service_index')}}" class="waves-effect"><i class="fa fa-bank"></i><span> Services </span></a>
                            </li>

                            <li class="has_sub">
                                <a href="javascript:void(0);" class="waves-effect"><i class="fa fa-cog"></i><span> Paramètres </span><span class="pull-right"><i class="mdi mdi-chevron-right"></i></span></a>
                                <ul class="list-unstyled">
                                    <li><a href="{{ path('admin_user_index')}}">Utilisateurs</a></li>
                                </ul>
                            </li>

                        </ul>
                    </div>
                    <div class="clearfix"></div>
                </div> <!-- end sidebarinner -->
            </div>
            <!-- Left Sidebar End -->

            <!-- Start right Content here -->
            <div class="content-page">

        {% block body %}{% endblock %}

            <footer class="footer">
                   © 2017 GC SMART.
              </footer>

          </div>
          <!-- End Right content here -->

      </div>
      <!-- END wrapper -->

        {% block javascripts %}
        <!-- jQuery  -->
        <script src="{{ asset('ressources/vendor/admin/assets/js/jquery.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/js/bootstrap.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/js/modernizr.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/js/detect.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/js/fastclick.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/js/jquery.slimscroll.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/js/jquery.blockUI.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/js/waves.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/js/wow.min.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/js/jquery.nicescroll.js')}}"></script>
        <script src="{{ asset('ressources/vendor/admin/assets/js/jquery.scrollTo.min.js')}}"></script>

        {% endblock %}

    </body>
</html>
