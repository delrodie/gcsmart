{% extends 'base.html.twig' %}

{% block body %}
    <h1>Service</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ service.libelle }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if service.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ service.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ service.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ service.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ service.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ service.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_service_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_service_edit', { 'id': service.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
