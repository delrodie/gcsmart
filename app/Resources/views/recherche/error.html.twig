{% extends 'base.html.twig' %}

{% block stylesheets %}

  <link href="{{ asset('ressources/vendor/admin/assets/plugins/timepicker/bootstrap-timepicker.min.css')}}" rel="stylesheet">
  <link href="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css')}}" rel="stylesheet">
  <link href="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-datepicker/css/bootstrap-datepicker.min.css')}}" rel="stylesheet">
  <link href="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-touchspin/css/jquery.bootstrap-touchspin.min.css')}}" rel="stylesheet" />
  <link href="{{ asset('ressources/vendor/admin/assets/photo/css/bootstrap-fileinput.css') }}" rel="stylesheet" type="text/css" />
  {{ parent() }}

{% endblock %}

{% block body %}

<div class="logo">
  <span><img src="{{ asset('ressources/images/amoiries.png')}}" ></span>
</div>
<div class="content" >
  <div class="inner">
    <h2>GC SMART 1.0</h2>
    <b><i><p align="center" style="font-family:'Courier New', Courier, monospace"><!--[-->Bienvenue sur la plate forme de gestion et de contrôle des agents du ministère du commerce de Côte d'ivoire.<br> une solution pour gagner du temps sur l'administration et le contrôle du personnel <!--]--><br />
          <!--[--> Une solution souple, évolutive et ouverte !<!--]--></p></i></b>
  </div>
</div>
<nav>
    <ul>
      <li class="btn-warning"><a href="#recherche"><b>RECHERCHER L'AGENT</b></a></li>
      <li class="btn-info"><a href="{{ path('admin')}}"><b>ESPACE RESSOURCE HUMAINE</b></a></li>
      <li class="btn-info"><a href="http://www.commerce.gouv.ci/contact.php"><b>Contact</b></a></li>
    </ul>
  </nav>
</header>

<!-- Main -->
<div id="main">

  <!-- Recherche -->
  <article id="reponse">
          <div align="center">
              <div class="media-main">
                <!-- Message -->
                {% for flash_message in app.session.flashBag.get('alert') %}
                  {% if flash_message %}
                  <div class="row">
                    <div class="col-xs-12">
                      <div class="alert alert-success alert-dismissible fade in">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>
                        <span class="alert-link">
                          <span style="color: red;"><i class="fa fa-warning fa-2x"> Attention :</i></span><br>
                          {{ flash_message }}
                        </span>
                      </div>
                    </div>
                  </div>
                  {% endif %}
                {% endfor %}
                <!-- \Message -->
                <p>
                  <div class="row">
                    <div class="col-xs-12 text-right">
                      <a href="{{ path('homepage') }}#recherche" title="">
                        <button type="button" class="btn">Retour</button>
                      </a>
                    </div>
                  </div>
                </p>
              </div>
            </div>
    </article>
    <!-- Recherche -->
              <article id="recherche">
                <div align="center">
                  <form method="post"  action="{{ path('recherche_new') }}#reponse"  name="appbundle_recherche">
                      <div class="row">
                        <div class="col-xs-10 text-right">
                          {{ form_widget(form.matricule) }}
                          {{ form_widget(form) }}
                        </div>
                        <div class="col-xs-2 text-left">
                          <button type="submit" class="btn btn-search"><i class="fa fa-search"></i></button>
                        </div>
                      </div>
                  </form>
                </div>
              </article>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('ressources/vendor/admin/assets/plugins/timepicker/bootstrap-timepicker.js')}}"></script>
  <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js')}}"></script>
  <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js')}}"></script>
  <script src="{{ asset('ressources/vendor/admin/assets/plugins/bootstrap-maxlength/bootstrap-maxlength.min.js')}}" type="text/javascript"></script>

{% endblock %}
