    <link href="{{ asset('ressources/vendor/admin/assets/plugins/datatables/scroller.bootstrap.min.css')}}" rel="stylesheet" type="text/css" />
{{ parent() }}
{% endblock %}

{% block body %}

    <div class="content">
      <div class="">
        <div class="page-header-title">
          <h4 class="page-title">Liste des matricules concernés par les recherches</h4>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="panel panel-primary">
              <div class="panel-body">
                <!-- Tableau -->
                <table id="datatable-buttons" class="table table-striped table-bordered">
                  <thead>
                    <tr class="text-center">
                      <td>N°</td>
                      <td>MATRICULES</td>
                      <td>DATES</td>
                    </tr>
                  </thead>
                  <tbody>
                    {% set i = 0 %}
                    {% for recherche in recherches %}
                        {% set i = i + 1 %}
                        <tr>
                          <td class="text-right">{{ i }}</td>
                          <td class="text-center"><a href="{{ path('admin_recherche_agent', {'matricule': recherche.matricule })}}">{{ recherche.matricule }}</a></td>
                          <td class="text-center">
                            {{ recherche.date|date('d-m-Y H:i:s')}}
                          </td>
                        </tr>
                    {% endfor %}
                  </tbody>
                </table>
                <!-- \Tableau -->
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}

