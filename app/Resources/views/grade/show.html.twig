{% extends 'base.html.twig' %}

{% block body %}
    <h1>Grade</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grade.id }}</td>
            </tr>
            <tr>
                <th>Libelle</th>
                <td>{{ grade.libelle }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if grade.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ grade.slug }}</td>
            </tr>
            <tr>
                <th>Publiepar</th>
                <td>{{ grade.publiePar }}</td>
            </tr>
            <tr>
                <th>Modifiepar</th>
                <td>{{ grade.modifiePar }}</td>
            </tr>
            <tr>
                <th>Publiele</th>
                <td>{{ grade.publieLe }}</td>
            </tr>
            <tr>
                <th>Modifiele</th>
                <td>{{ grade.modifieLe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_grade_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_grade_edit', { 'id': grade.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
